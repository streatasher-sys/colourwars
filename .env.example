# Colour Wars - Environment variables
# Copy to .env and fill in your values

PORT=3000

# PostgreSQL connection string
# Local: postgresql://user:password@localhost:5432/colourwars
# Cloud: postgresql://user:password@host:5432/dbname?sslmode=require
DATABASE_URL=postgresql://localhost:5432/colourwars

# Set to "true" for cloud providers (e.g. Heroku, Railway)
DATABASE_SSL=false

# Secret for JWT signing - use a long random string in production
JWT_SECRET=your-super-secret-jwt-key-change-this
